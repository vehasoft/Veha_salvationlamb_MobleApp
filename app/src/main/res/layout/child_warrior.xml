<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
    >
        <TextView android:layout_width="match_parent"
                  android:id="@+id/warrior_txt"
                  android:textAlignment="textStart"
                  android:padding="5dp"
                  android:layout_height="wrap_content"/>
        <Spinner
                android:id="@+id/religion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:backgroundTint="@color/home_bg"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="please select religion"
                  android:visibility="gone"
                  android:id="@+id/err_rel"
        />
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/church_op"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                android:background="@color/home_bg"
                android:layout_marginBottom="10dp"
                android:hint="Church name">

            <!--this is the actual edit text which takes the input-->
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/church"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>
        <CheckBox android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="No Gifts"
                  android:textColor="@color/black"
                  android:id="@+id/gift1"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="10dp"
                  android:buttonTint="@color/black"
        />
        <CheckBox android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="The Gift of  Vision"
                  android:textColor="@color/black"
                  android:id="@+id/gift2"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="10dp"
                  android:buttonTint="@color/black"
        />
        <CheckBox android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="The Discerning of Spirits"
                  android:textColor="@color/black"
                  android:id="@+id/gift3"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="10dp"
                  android:buttonTint="@color/black"
        />
        <CheckBox android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Different Kinds of Tongue"
                  android:textColor="@color/black"
                  android:id="@+id/gift4"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="10dp"
                  android:buttonTint="@color/black"
        />
        <CheckBox android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="The Interpretation of Tongues"
                  android:textColor="@color/black"
                  android:id="@+id/gift5"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="10dp"
                  android:buttonTint="@color/black"
        />
    </LinearLayout>
</ScrollView>